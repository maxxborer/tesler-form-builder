{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": false,
    "types": ["node"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "config/**/*", "scripts/**/*", ".yarn/**/*", ".storybook/**/*", ".eslintrc.*"],
}
